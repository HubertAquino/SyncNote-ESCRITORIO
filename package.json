{
  "name": "syncnote-escritorio",
  "version": "0.1.0",
  "private": true,
  "description": "App de escritorio para notas con categor√≠as y tareas, conectada a Firebase",
  "main": "electron/main.js",
  "author": "",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently -k \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "build:renderer": "vite build",
    "build": "npm run build:renderer && electron-builder",
    "lint": "echo 'No hay lint configurado'",
    "start": "electron .",
    "postinstall": ""
  },
  "dependencies": {
    "firebase": "^10.12.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.30.1"
  },
  "devDependencies": {
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "concurrently": "^9.0.1",
    "electron": "^31.3.0",
    "electron-builder": "^24.13.3",
    "typescript": "^5.6.3",
    "vite": "^5.4.10",
    "wait-on": "^8.0.2"
  },
  "build": {
    "appId": "com.syncnote.escritorio",
    "productName": "SyncNote",
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "directories": {
      "buildResources": "build"
    }
  }
}
